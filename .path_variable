pathmunge () {
  if ! echo "$PATH" | egrep -q "(^|:)$1(:|$)" ; then
    PATH="$PATH:$1"
  fi
}

# Place user scripts in $HOME/bin.
[ -d "$HOME/bin" ] && PATH="$HOME/bin:$PATH"
pathmunge "/usr/local/scripts"

[ -f "$HOME/.nvm/nvm.sh" ] && pathmunge "./node_modules/.bin"
pathmunge "/usr/local/heroku/bin"

export PATH
